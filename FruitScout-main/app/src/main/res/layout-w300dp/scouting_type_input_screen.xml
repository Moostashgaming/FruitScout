<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundNavyBlue">

    <TextView
        android:id="@+id/pleaseSelectScoutingTypeTextView"
        android:layout_width="294dp"
        android:layout_height="147dp"
        android:fontFamily="@font/batmfa__"
        android:text="@string/select_scouting_type_text"
        android:textAlignment="center"
        android:textColor="@color/outlineGreen"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.021" />

    <Button
        android:id="@+id/matchScoutingButton"
        android:layout_width="325dp"
        android:layout_height="245dp"
        android:backgroundTint="@color/safetyGreen"
        android:fontFamily="@font/batmfa__"
        android:text="@string/match_scouting_button_text"
        android:textColor="@color/blueOne"
        android:textSize="40sp"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.769" />

    <Button
        android:id="@+id/pitScoutingButton"
        android:layout_width="325dp"
        android:layout_height="245dp"
        android:backgroundTint="@color/safetyGreen"
        android:fontFamily="@font/batmfa__"
        android:text="@string/pit_scouting_button_text"
        android:textColor="@color/blueOne"
        android:textSize="40sp"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.298" />

    <Button
        android:id="@+id/backButtonScoutingSelection"
        android:layout_width="241dp"
        android:layout_height="67dp"
        android:layout_marginEnd="3dp"
        android:backgroundTint="@color/outlineGreen"
        android:fontFamily="@font/batmfa__"
        android:text="@string/back_button_text"
        android:textColor="@color/blueOne"
        android:textSize="45sp"
        app:cornerRadius="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.922"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />
</androidx.constraintlayout.widget.ConstraintLayout>