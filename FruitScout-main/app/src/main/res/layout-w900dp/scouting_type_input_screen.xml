<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundNavyBlue">

    <TextView
        android:id="@+id/pleaseSelectScoutingTypeTextView"
        android:layout_width="592dp"
        android:layout_height="128dp"
        android:fontFamily="@font/batmfa__"
        android:text="@string/select_scouting_type_text"
        android:textAlignment="center"
        android:textColor="@color/outlineGreen"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.11" />

    <Button
        android:id="@+id/matchScoutingButton"
        android:layout_width="415dp"
        android:layout_height="280dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/safetyGreen"
        android:fontFamily="@font/batmfa__"
        android:text="@string/match_scouting_button_text"
        android:textColor="@color/blueOne"
        android:textSize="55sp"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.927"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65" />

    <Button
        android:id="@+id/pitScoutingButton"
        android:layout_width="415dp"
        android:layout_height="280dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/safetyGreen"
        android:fontFamily="@font/batmfa__"
        android:text="@string/pit_scouting_button_text"
        android:textColor="@color/blueOne"
        android:textSize="55sp"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.648" />

    <Button
        android:id="@+id/backButtonScoutingSelection"
        android:layout_width="276dp"
        android:layout_height="75dp"
        android:backgroundTint="@color/outlineGreen"
        android:fontFamily="@font/batmfa__"
        android:text="@string/back_button_text"
        android:textColor="@color/blueOne"
        android:textSize="45sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.959"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.969" />
</androidx.constraintlayout.widget.ConstraintLayout>