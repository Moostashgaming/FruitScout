<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundNavyBlue">

    <TextView
        android:id="@+id/creditsTextView"
        android:layout_width="686dp"
        android:layout_height="140dp"
        android:fontFamily="@font/batmfa__"
        android:text="@string/credits_text"
        android:textAlignment="center"
        android:textColor="@color/safetyGreen"
        android:textSize="120sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.071" />

    <TextView
        android:id="@+id/appCreatorTextView"
        android:layout_width="472dp"
        android:layout_height="94dp"
        android:fontFamily="@font/batmfa__"
        android:text="@string/creator_text"
        android:textAlignment="center"
        android:textColor="@color/safetyGreen"
        android:textSize="70sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.252" />
</androidx.constraintlayout.widget.ConstraintLayout>