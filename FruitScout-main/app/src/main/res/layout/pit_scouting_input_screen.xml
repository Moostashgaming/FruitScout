<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/safetyGreen">

    <Button
        android:id="@+id/nextButtonPitScouting"
        android:layout_width="284dp"
        android:layout_height="85dp"
        android:backgroundTint="@color/backgroundNavyBlue"
        android:fontFamily="@font/batmfa__"
        android:text="@string/next_button_text"
        android:textColor="@color/outlineGreen"
        android:textSize="45sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977" />

    <Button
        android:id="@+id/backButtonPitScouting"
        android:layout_width="284dp"
        android:layout_height="85dp"
        android:backgroundTint="@color/backgroundNavyBlue"
        android:fontFamily="@font/batmfa__"
        android:text="@string/back_button_text"
        android:textColor="@color/outlineGreen"
        android:textSize="45sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977" />

</androidx.constraintlayout.widget.ConstraintLayout>